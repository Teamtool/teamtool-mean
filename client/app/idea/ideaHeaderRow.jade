.row
  .col-md-6
    b {{idea.name}}
  .col-md-2
    | {{idea.author.username}}
  .col-md-2
    button.btn.btn-primary.btn-xs(type="button" disabled="disabled" ng-style="{'background-color':getColor(idea)}") {{idea.category}}
  .col-md-2(align="right")
    .to-review(ng-show='allowedToRate(idea)')
      uib-rating(ng-model="idea.currentRating", max="5", on-leave='addRating(idea)' readonly="modalWindowOpen || !isLoggedIn()")
      i {{idea.raterCount}}
    .reviewed(ng-show='!allowedToRate(idea)')
      uib-rating(ng-init="averageRating = getNumberFloored(idea.averageRating)", ng-model="averageRating", max="5", readonly="true")
      i {{idea.raterCount}}
      br
      | {{idea.averageRating}} / {{idea.totalStarCount}} stars
